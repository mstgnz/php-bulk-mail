<script type="text/javascript">
var doctype = `<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>

</style>
<body>

</body>
</html>`;

$(document).ready(function(){
    $('#write').val(doctype)
    $('#write').on('keyup',function(e){
        $('#result').attr('srcdoc',e.target.value)
        $('#full').attr('srcdoc',e.target.value)
    })
    $('#full').css('height',$(document).outerHeight()-250+"px")
    $('#save').on('click',function(){
        $('textarea[name=theme]').val($('#write').val())
    })
});
</script>

<style>
    #write{width:100%;resize: none; overflow: scroll; min-height: 600px; background: #333; color:#eee}
    #result{width:100%; min-height: 600px; overflow-x: hidden; overflow-y: scroll}
    #full{width:100%; overflow-x: hidden; overflow-y: scroll}
    #fs, #save{position:absolute; top:15px; right:40px; font-size: 30px; color:coral; display:block;}
    #fs:hover, #save:hover{color:red; cursor:pointer}
    .input-group-text{width: 150px}
</style>
